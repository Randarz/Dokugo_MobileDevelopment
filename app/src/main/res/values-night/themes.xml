<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Dokugo" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>

        <item name="colorOnPrimary">@color/green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="itemIconSize">24dp</item>
    </style>

    <style name="bot_navbar">
        <item name="android:background">@color/appBackground</item>
        <item name="itemIconTint">@color/black</item>
    </style>

    <style name="clickableText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="slightdarkbutton">
        <item name="android:backgroundTint">@color/slightdarkbutton</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="expensebutton">
        <item name="android:backgroundTint">@color/expense_text</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="incomebutton">
        <item name="android:backgroundTint">@color/income_text</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="darkbutton">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/darkbutton</item>
    </style>
</resources>