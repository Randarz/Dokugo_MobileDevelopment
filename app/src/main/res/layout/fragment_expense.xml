<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".ui.moneymanage.ExpenseFragment">

        <!-- Date Picker EditText -->
        <EditText
            android:id="@+id/etDatePicker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/date_hint"
            android:inputType="none"
            android:drawableEnd="@drawable/ic_calender"
            android:focusable="false"
            android:backgroundTint="@color/gray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9"
            android:layout_marginBottom="16dp" />

        <!-- Amount EditText -->
        <EditText
            android:id="@+id/etAmount1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/amount_hint"
            android:inputType="numberDecimal"
            android:backgroundTint="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/etDatePicker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9"
            android:layout_marginBottom="16dp" />

        <!-- Category Spinner -->
        <Spinner
            android:id="@+id/spinnerCategory1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/etAmount1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9"
            android:layout_marginBottom="16dp" />

        <!-- Note EditText -->
        <EditText
            android:id="@+id/etNote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/note_hint"
            android:inputType="text"
            android:backgroundTint="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/spinnerCategory1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9"
            android:layout_marginBottom="16dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSave1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:backgroundTint="@color/green"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/etNote"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.9" />

    </androidx.constraintlayout.widget.ConstraintLayout>
