<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    tools:context=".login.signup.SignUpActivity">

    <TextView
        android:id="@+id/tv_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:textColor="@color/black"
        android:layout_marginTop="80dp"
        android:layout_marginStart="8dp"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/usernameComponent" />

    <TextView
        android:id="@+id/tv_f_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:text="@string/first_name"
        app:layout_constraintTop_toBottomOf="@id/tv_signup"
        app:layout_constraintStart_toStartOf="@id/usernameComponent">
    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/fnameComponent"
        android:layout_width="320dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/tv_f_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:boxBackgroundColor="@android:color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/fnameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="24dp"
            android:background="@drawable/field_temp_2"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tv_l_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:text="@string/last_name"
        app:layout_constraintTop_toBottomOf="@id/fnameComponent"
        app:layout_constraintStart_toStartOf="@id/usernameComponent">
    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/lnameComponent"
        android:layout_width="320dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/tv_l_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:boxBackgroundColor="@android:color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/lnameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="24dp"
            android:background="@drawable/field_temp_2"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:text="@string/username"
        app:layout_constraintTop_toBottomOf="@id/lnameComponent"
        app:layout_constraintStart_toStartOf="@id/usernameComponent">
    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/usernameComponent"
        android:layout_width="320dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:boxBackgroundColor="@android:color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/usernameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="24dp"
            android:background="@drawable/field_temp_2"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:text="@string/email"
        app:layout_constraintTop_toBottomOf="@id/usernameComponent"
        app:layout_constraintStart_toStartOf="@id/usernameComponent">
    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailComponent"
        android:layout_width="320dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:boxBackgroundColor="@android:color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="24dp"
            android:background="@drawable/field_temp_2"
            android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:text="@string/password"
        app:layout_constraintTop_toBottomOf="@id/emailComponent"
        app:layout_constraintStart_toStartOf="@id/usernameComponent">
    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordComponent"
        android:layout_width="320dp"
        android:layout_height="70dp"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:boxBackgroundColor="@android:color/white">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="24dp"
            android:background="@drawable/field_temp_2"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_signin"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:text="@string/sign_in"
        android:textColor="@color/black"
        android:background="@drawable/button_border"
        style="@style/darkbutton"
        android:backgroundTint="@color/slightdarkbutton"
        app:layout_constraintTop_toBottomOf="@id/passwordComponent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/haveacc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="60dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:text="@string/have_an_account_already"
        app:layout_constraintTop_toBottomOf="@id/bt_signin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </TextView>

    <TextView
        android:id="@+id/tv_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_in"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:textSize="14sp"
        style="@style/clickableText"
        app:layout_constraintTop_toBottomOf="@id/bt_signin"
        app:layout_constraintStart_toEndOf="@+id/haveacc">
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>