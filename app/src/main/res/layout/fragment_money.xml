<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:androidx="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.moneymanage.MoneyFragment">

    <!-- ScrollView untuk konten yang banyak -->
    <android.widget.ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title: Budget Manager -->
            <TextView
                android:id="@+id/titleBudgetManager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:text="Budget Manager"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Income & Expense Title -->
            <TextView
                android:id="@+id/incomeExpenseTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:text="@string/income"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- TextView for displaying income (compact and aesthetic) -->
            <TextView
                android:id="@+id/incomeAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:background="#81C784"
                android:gravity="center"
                android:padding="12dp"
                android:text="Rp 1,000,000"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- MPAndroidChart LineChart for data visualization -->
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <!-- X axis intervals: Weekly, Monthly, and Yearly -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <!-- Weekly Button -->
                <Button
                    android:id="@+id/weeklyBtn1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1 Week" />

                <!-- Monthly Button -->
                <Button
                    android:id="@+id/monthlyBtn1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1 Month" />

                <!-- Yearly Button -->
                <Button
                    android:id="@+id/yearlyBtn1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1 Year" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <!-- TextView positioned at the top-left corner -->
                <TextView
                    android:id="@+id/editText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingStart="16dp"
                    android:text="Detail Income"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />  <!-- Optional padding to the left -->

                <!-- Button positioned at the top-right corner -->
                <Button
                    android:id="@+id/addButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:text="Add Income"
                    android:gravity="center"
                    app:layout_constraintBottom_toTopOf="@id/allButton1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/editText1" />

                <!-- LinearLayout for All, Salary, Others buttons positioned below TextView and Add Button -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="start"
                    android:orientation="horizontal"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/editText1">

                    <!-- All Button -->
                    <Button
                        android:id="@+id/allButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:minWidth="60dp"
                        android:padding="4dp"
                        android:text="All"
                        android:textSize="12sp" />

                    <!-- Salary Button -->
                    <Button
                        android:id="@+id/salaryButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:minWidth="60dp"
                        android:padding="4dp"
                        android:text="Salary"
                        android:textSize="12sp" />

                    <!-- Others Button -->
                    <Button
                        android:id="@+id/othersButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:minWidth="60dp"
                        android:padding="4dp"
                        android:text="Others"
                        android:textSize="12sp" />

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />
        </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">


                    <!-- Expense Title -->
                    <TextView
                        android:id="@+id/expenseTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/expense"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <!-- TextView for displaying expense (compact and aesthetic) -->
                    <TextView
                        android:id="@+id/expenseAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp 500,000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:background="#FF7043"
                        android:textColor="#FFFFFF"
                        android:padding="12dp"
                        android:layout_marginBottom="16dp"
                        android:layout_gravity="center"/>

                    <!-- MPAndroidChart LineChart for data visualization -->
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart2"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"/>

                    <!-- X axis intervals: Weekly, Monthly, and Yearly -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:weightSum="3">

                        <!-- Weekly Button -->
                        <Button
                            android:id="@+id/weeklyBtn2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="1 Week"
                            android:layout_weight="1" />

                        <!-- Monthly Button -->
                        <Button
                            android:id="@+id/monthlyBtn2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="1 Month"
                            android:layout_weight="1" />

                        <!-- Yearly Button -->
                        <Button
                            android:id="@+id/yearlyBtn2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="1 Year"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <!-- TextView positioned at the top-left corner -->
                        <TextView
                            android:id="@+id/editText2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Detail Expense"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:paddingStart="16dp" />

                        <!-- Button positioned at the top-right corner -->
                        <Button
                            android:id="@+id/addButton2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Expense"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="16dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@id/editText2"
                            app:layout_constraintBottom_toTopOf="@id/allButton2" />

                        <!-- LinearLayout for All, Food, Travel buttons positioned below TextView and Add Button -->
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/editText2"
                            android:gravity="start">

                            <!-- All Button -->
                            <Button
                                android:id="@+id/allButton2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="All"
                                android:textSize="12sp"
                                android:padding="4dp"
                                android:minWidth="60dp"
                                android:layout_marginEnd="4dp" />

                            <!-- Food Button -->
                            <Button
                                android:id="@+id/foodButton2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Food"
                                android:textSize="12sp"
                                android:padding="4dp"
                                android:minWidth="60dp"
                                android:layout_marginEnd="4dp" />

                            <!-- Travel Button -->
                            <Button
                                android:id="@+id/travelButton2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Travel"
                                android:textSize="12sp"
                                android:padding="4dp"
                                android:minWidth="60dp"
                                android:layout_marginEnd="4dp" />
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- RecyclerView for listing expense items -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"/>
                </LinearLayout>

    </android.widget.ScrollView>

</FrameLayout>
