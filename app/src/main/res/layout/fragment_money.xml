<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:androidx="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.moneymanage.MoneyFragment"
    android:background="@color/appBackground">

    <!-- ScrollView untuk konten yang banyak -->
    <android.widget.ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title: Budget Manager -->
            <TextView
                android:id="@+id/titleBudgetManager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:text="Budget Manager"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Income & Expense Title -->
            <TextView
                android:id="@+id/incomeExpenseTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                android:text="@string/income"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/incomeAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:background="#81C784"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />


            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <!-- Weekly Button -->


                <!-- Monthly Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/weeklyBtn1"
                    style="@style/timelinebtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/button_border"
                    android:backgroundTint="@color/gray"
                    android:text="@string/time_week"
                    app:cornerRadius="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/monthlyBtn1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/itme_Month"
                    app:cornerRadius="8dp"
                    android:background="@drawable/button_border"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    style="@style/timelinebtn"
                    android:backgroundTint="@color/gray"  />

                <!-- Yearly Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/yearlyBtn1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/time_year"
                    app:cornerRadius="8dp"
                    android:background="@drawable/button_border"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    style="@style/timelinebtn"
                    android:backgroundTint="@color/gray" />

            </LinearLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/editText1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingStart="16dp"
                    android:text="Detail Income"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/addincome"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/editText1"
                    android:background="@drawable/button_border"
                    android:backgroundTint="@color/gray"
                    style="@style/timeclickbtn"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="start"
                    android:orientation="horizontal"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/editText1">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/allButton1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:minWidth="60dp"
                        android:padding="4dp"
                        android:text="All"
                        android:textSize="12sp"
                        android:background="@drawable/button_border"
                        android:backgroundTint="@color/gray"
                        style="@style/timelinebtn"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/salaryButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:minWidth="60dp"
                        android:padding="4dp"
                        android:text="Salary"
                        android:textSize="12sp"
                        android:background="@drawable/button_border"
                        android:backgroundTint="@color/gray"
                        style="@style/timelinebtn"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/othersButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:minWidth="60dp"
                        android:padding="4dp"
                        android:text="Others"
                        android:textSize="12sp"
                        android:background="@drawable/button_border"
                        android:backgroundTint="@color/gray"
                        style="@style/timelinebtn"/>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />
        </LinearLayout>


