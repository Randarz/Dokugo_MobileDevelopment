<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menuawal.ui.home.HomeFragment">

    <!-- Photo Profile with Change Photo Button -->
    <FrameLayout
        android:id="@+id/profileContainer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp">

        <!-- ImageView for Profile -->
        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_account_circle_24"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_circle" />

        <!-- Change Photo Button -->
        <Button
            android:id="@+id/btnChangePhoto"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_circle_button"
            android:drawableStart="@drawable/ic_edit"
            android:drawablePadding="4dp"
            android:padding="0dp"
            android:text=""
            android:layout_gravity="bottom|end"
            android:layout_margin="4dp" />
    </FrameLayout>

    <!-- Edit Account -->
    <LinearLayout
        android:id="@+id/editAccountContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/profileContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imgEditAccount"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_edit"
            android:contentDescription="@string/edit_account_icon"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/tvEditAccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="@string/edit_account"
            android:textSize="16sp"
            android:gravity="center_vertical" />
    </LinearLayout>

    <!-- Change Email -->
    <LinearLayout
        android:id="@+id/changeEmailContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/editAccountContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imgChangeEmail"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_email"
            android:contentDescription="@string/change_email_icon"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/tvChangeEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="@string/change_email"
            android:textSize="16sp"
            android:gravity="center_vertical" />
    </LinearLayout>

    <!-- Delete Account -->
    <LinearLayout
        android:id="@+id/deleteAccountContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/changeEmailContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imgDeleteAccount"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_delete"
            android:contentDescription="@string/delete_account_icon"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/tvDeleteAccount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="@string/delete_account"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:textColor="@android:color/holo_red_dark" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>